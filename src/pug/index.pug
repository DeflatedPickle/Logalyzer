doctype html
html
    head
        title="Logalyzer"
        meta(charset="UTF-8")

        link(href="index.css" rel="stylesheet")
        link(href="https://unpkg.com/tabulator-tables@4.4.3/dist/css/tabulator.min.css" rel="stylesheet")
        link(href="https://unpkg.com/tabulator-tables@4.4.3/dist/css/tabulator_midnight.min.css", rel="stylesheet")
    body
        div.center
            div.center#grid
                label#label-re-select RegEx:
                select#re-select
                    option(value="custom") Custom
                    option(value="forge") Forge
                textarea#re-pattern

                label#label-re-formatter Formatter:
                input#re-formatter(type="text")

                label#label-tb-columns Columns:
                input#tb-columns(type="text")

                button#tabulate Tabulate

        div#grid-table
            div#table.table
            textarea#text(name="table")